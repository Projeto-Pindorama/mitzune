# error handling library
# pretty straightfoward

# Use this both for warnings and errors
function printerr {
    printf '%s\n' "$@" 1>&2
}

function clean_n_quit {
    NUMCODE="$1"
    trap "rm -vf $TMPFILE; unset ${SCRIPT_VARS[@]}; exit $NUMCODE" 0 1 2 3 15
}

function oh_mist {
    printerr "$1"
    clean_n_quit "$2"
}
